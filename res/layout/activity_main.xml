<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    >
	<GridView
		    android:id="@+id/gridview"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:columnWidth="17dp"
		    android:verticalSpacing="0dp"
		    android:horizontalSpacing="0dp"
		    android:stretchMode="columnWidth"
		    android:gravity="center"
		    android:layout_alignParentTop="true"
		/>
	
	<LinearLayout 
	    android:id="@+id/control_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    	android:layout_gravity="center_horizontal" >
		<Button 
		    	android:id="@+id/controlButtonFirst"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:text="@string/icon_double_angle_left" />
		<Button 
		    	android:id="@+id/controlButtonPrev"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:text="@string/icon_chevron_left" />
		<Button 
		    	android:id="@+id/controlButtonNext"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:text="@string/icon_chevron_right" />
		<Button 
		    	android:id="@+id/controlButtonLast"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    	android:text="@string/icon_double_angle_right" />
	</LinearLayout>
</LinearLayout>